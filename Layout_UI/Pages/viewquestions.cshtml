                                    <option value="Section 5"> Section 5</option>
                                    <option value="Section 6"> Section 6</option>
                                    <option value="Section 7"> Section 7</option>
                                </select>


                            </div>
                            <div class="col-sm-3 ">
                                <button class="btn btn-block btn-info btn-rounded" id="btnSearch" style="margin-top: 35px;">View</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
     
        <!-- /row -->

        <div class="row" id="searchResult"  >

            <div class="col-sm-12">
                <div class="white-box">
                    <h3 class="box-title m-b-0">Answers</h3>
                    <p class="text-muted m-b-30">Export data to Copy, CSV, Excel, PDF & Print</p>
                    <div class="table-responsive">
                        <table id="example23" class="display nowrap" cellspacing="0" width="100%">
