</div>
<script src="../plugins/bower_components/jquery/dist/jquery.min.js"></script>
<script src="js/waves.js"></script>
<script src="../plugins/bower_components/toast-master/js/jquery.toast.js"></script>
<script src="js/toastr.js"></script>
<script>


    $(document).ready(function () {
    $('#searchResult').hide();
    $("#btnSearch").on("click", function () {
     if ($('#ddlCourse').val() == "") {
                   alertMessage('Selcet Course','warning');
                return false;
            }
     else if ($('#ddlSemester').val() == "") {
                   alertMessage('Selcet Semester','warning');
                return false;
            }
    else if ($('#ddlSection').val() == "") {
                   alertMessage('Selcet Section','warning');
                return false;
            }
    else
    {
    $('#searchResult').show();

    }

    });

});

    function alertMessage(message,type)
    {
            $.toast({
            text: message,
            position: 'top-right',
            loaderBg: '#ff6849',
            icon: type,
            hideAfter: 1500,
            stack: 6
        });

    }
</script>